<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- res/values/styles.xml -->
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_animation</item>
        <item name="android:windowExitAnimation">@anim/exit_animation</item>
    </style>


    <!-- 其他样式... -->

    <style name="TextAppearance.BottomNavigationView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/sp_12</item>
        <!-- 你可以添加其他的文本属性，如字体、颜色等 -->
        <item name="android:textColor">#3A3A3A</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.normal" parent="TextAppearance.AppCompat.Body1">
        <!-- 你可以添加其他的文本属性，如字体、颜色等 -->
        <item name="android:textColor">#DEDEDE</item>
    </style>

    <style name="RadioButtonNoButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
    </style>

    <style name="PopUpWindow">
        <item name="android:windowBackground">@color/black</item>
    </style>


    <!--popUnMenu 样式-->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/red</item>
    </style>

    <style name="PopupMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenuTextStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTextStyle</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuDivier</item>
    </style>

    <style name="PopupMenuTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="PopupMenuDivier">
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">@dimen/dp_1</item>
    </style>
</resources>