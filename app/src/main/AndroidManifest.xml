                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.onBit.pixelDemo.ui.activity.MediaActivity"
            android:exported="true"></activity>
