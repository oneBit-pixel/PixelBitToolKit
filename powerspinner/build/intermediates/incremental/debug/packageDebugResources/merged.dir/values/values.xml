<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="powerspinner_scrollbar">@android:color/transparent</color>
    <style name="PowerSpinnerStyle">
    <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    <item name="android:scrollbars">vertical</item>
    <item name="android:fadeScrollbars">true</item>
    <item name="android:scrollbarThumbVertical">@drawable/powerspinner_scrollbar</item>
  </style>
    <style name="PowerSpinner_DropDown">
    <item name="android:windowEnterAnimation">@anim/powerspinner_show_down_center</item>
    <item name="android:windowExitAnimation">@anim/powerspinner_fade_out</item>
  </style>
    <style name="PowerSpinner_Elastic">
    <item name="android:windowEnterAnimation">@anim/powerspinner_elastic_down</item>
    <item name="android:windowExitAnimation">@anim/powerspinner_fade_out</item>
  </style>
    <style name="PowerSpinner_Fade">
    <item name="android:windowEnterAnimation">@anim/powerspinner_fade_in</item>
    <item name="android:windowExitAnimation">@anim/powerspinner_fade_out</item>
  </style>
    <declare-styleable name="PowerSpinnerView" ns1:ignore="ResourceName">
    
    <attr format="reference" name="spinner_arrow_drawable"/>
    
    <attr format="boolean" name="spinner_arrow_show"/>
    
    <attr format="enum" name="spinner_arrow_gravity">
      <enum name="start" value="0"/>
      <enum name="top" value="1"/>
      <enum name="end" value="2"/>
      <enum name="bottom" value="3"/>
    </attr>
    
    <attr format="dimension" name="spinner_arrow_padding"/>
    
    <attr format="color|reference" name="spinner_arrow_tint"/>
    
    <attr format="boolean" name="spinner_arrow_animate"/>
    
    <attr format="integer" name="spinner_arrow_animate_duration"/>
    
    <attr format="boolean" name="spinner_divider_show"/>
    
    <attr format="dimension" name="spinner_divider_size"/>
    
    <attr format="color|reference" name="spinner_divider_color"/>
    
    <attr format="color|reference" name="spinner_popup_background"/>
    
    <attr format="enum" name="spinner_popup_animation">
      <enum name="dropdown" value="0"/>
      <enum name="fade" value="1"/>
      <enum name="bounce" value="2"/>
      <enum name="normal" value="3"/>
    </attr>
    
    <attr format="reference" name="spinner_popup_animation_style"/>
    
    <attr format="dimension" name="spinner_popup_width"/>
    
    <attr format="dimension" name="spinner_popup_height"/>
    
    <attr format="dimension" name="spinner_popup_max_height"/>
    
    <attr format="dimension" name="spinner_popup_top_padding"/>
    
    <attr format="dimension" name="spinner_popup_end_padding"/>
    
    <attr format="dimension" name="spinner_popup_bottom_padding"/>
    
    <attr format="dimension" name="spinner_popup_start_padding"/>
    
    <attr format="dimension" name="spinner_popup_padding"/>
    
    <attr format="dimension" name="spinner_item_height"/>
    
    <attr format="color|reference" name="spinner_selected_item_background"/>
    
    <attr format="dimension" name="spinner_popup_elevation"/>
    
    <attr format="reference" name="spinner_item_array"/>
    
    <attr format="boolean" name="spinner_dismiss_notified_select"/>
    
    <attr format="integer" name="spinner_debounce_duration"/>
    
    <attr format="string" name="spinner_preference_name"/>
    
    <attr format="boolean" name="spinner_popup_focusable"/>
  </declare-styleable>
</resources>