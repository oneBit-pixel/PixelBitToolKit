<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- res/values/styles.xml -->
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_animation</item>
        <item name="android:windowExitAnimation">@anim/exit_animation</item>
    </style>

    <!--从下方弹出-->
    <style name="DialogBottomPopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_up_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_down_hide</item>
    </style>

    <!--从上方弹出-->
    <style name="DialogTopPopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_down_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_up_hide</item>
    </style>

    <!--圆角背景dialog-->
    <style name="WhiteRoundDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_white_bg</item>
    </style>

    <style name="RoundDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>